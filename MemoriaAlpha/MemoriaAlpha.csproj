<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Dalamud.NET.Sdk/14.0.1">
  <PropertyGroup>
    <Version>0.0.0.1</Version>
    <PackageProjectUrl>https://github.com/goatcorp/SamplePlugin</PackageProjectUrl>
    <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <!-- Copy quest data from project data folder -->
  <ItemGroup>
    <Content Include="data\**\*.json"> <!-- changed -->
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>data\%(RecursiveDir)%(FileName)%(Extension)</Link>
      <Visible>false</Visible> <!-- new -->
    </Content>
  </ItemGroup>

  <!-- Copy news.json from repo root -->
  <ItemGroup>
    <Content Include="..\data\news.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>data\news.json</Link>
      <Visible>false</Visible> <!-- new -->
    </Content>
  </ItemGroup>
</Project>
